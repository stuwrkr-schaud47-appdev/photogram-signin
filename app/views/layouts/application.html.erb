<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramSignin2</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <body>
    <nav>
      <ul>
          <!-- show sign up, sign in and sign out conditionally -->
          <%# if session.fetch(:user_id) == User.find(session[:user_id]) %>
          <%# if session.fetch(:user_id) == session[:user_id] %>
          <li>
            <a href="/user_sign_up">Sign Up</a>
          </li>
          <%# end %>
          <%# if !is_logged_in? %>
          <li>
            <a href="/user_sign_in">Sign In</a>
          </li>
          <%# else %>
          <li>
            <a href="/user_sign_out">Sign Out</a>
          </li>
          <%# end %>
          <li>
            <a href="/users">Users</a>
          </li>
          <li>
            <a href="/photos">Photos</a>
          </li>
      </ul>
    </nav>

      <!-- conditional to show messages of success and failure -->
      <% if notice.present? %>
      <div style="border: thin green solid; color: green"><%= notice %></div>
      <% end %>

      <% if alert.present? %>
      <div style="border: thin red solid; color: red">><%= alert %></div>
      <% end %>

    <%= yield %>
  </body>
</html>
